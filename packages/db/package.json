{
	"name": "@no-notes/db",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"db:push": "drizzle-kit push:pg",
		"db:generate": "drizzle-kit generate:pg",
		"db:studio": "drizzle-kit studio",
		"db:seed": "tsx src/seed.ts",
		"db:migrate": "drizzle-kit migrate",
		"db:reset": "node --no-warnings=ExperimentalWarning --loader @swc-node/register/esm ./src/reset.ts",
		"dev": "tsc -w",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.29.4",
		"pg": "^8.15.5",
		"postgres": "^3.4.3"
	},
	"devDependencies": {
		"@swc-node/register": "^1.10.10",
		"@swc/core": "^1.11.22",
		"@types/pg": "^8.11.14",
		"drizzle-kit": "^0.20.18",
		"tsx": "^4.19.3",
		"typescript": "^5.7.2"
	}
}
